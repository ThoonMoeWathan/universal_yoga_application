<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/instructorsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="CLASS LISTS ..."
        android:textColor="@color/darkPurple"
        android:textSize="24sp" />
    <ImageView
        android:id="@+id/addClassBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_circle_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/instructorsHeading"
        android:layout_marginEnd="30dp"/>
    <ImageView
        android:id="@+id/searchClassBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_search_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/instructorsHeading"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"/>
    <!-- Search Bar -->
    <EditText
        android:id="@+id/edit_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="13dp"
        android:hint="Search ..."
        android:visibility="gone"
        android:padding="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/classesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/instructorsHeading"
        android:padding="18dp"/>
</RelativeLayout>